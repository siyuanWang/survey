#set($firstMenu=1)
<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb"> <a href="/index/" title="首页" class="tip-bottom"><i class="icon-home"></i> Home</a></div>
    </div>
    <!--End-breadcrumbs-->

    <!--Action boxes-->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>新增问卷</h5>
                    </div>
                    <div id="questionContainer" class="widget-content">
                        <form class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">标题</label>
                                <div class="controls">
                                    <input type="text" id="title">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">问卷描述</label>
                                <div class="controls">
                                    <textarea type="text" name="describe" id="describe" style="width: 400px;" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">开始时间</label>
                                <div class="controls">
                                    <input type="text" id="startTime" name="startTime" placeholder="yyyy-mm-dd">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">结束时间</label>
                                <div class="controls">
                                    <input type="text" id="endTime" name="endTime" placeholder="yyyy-mm-dd">
                                </div>
                            </div>
                        </form>
                        <div class="form-actions">
                            <button id="saveBtn" class="btn btn-success">保存</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    require(['scripts/paper/paperAdd'], function () {
    });
</script>
